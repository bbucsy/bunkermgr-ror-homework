= form_with(model: inventory_item, local: true) do |form|
  - if inventory_item.errors.any?
    #error_explanation
      %h2
        = pluralize(inventory_item.errors.count, "error")
        prohibited this inventory_item from being saved:
      %ul
        - inventory_item.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :food_type
    = form.text_field :food_type
  .field
    = form.label :exp_date
    = form.date_select :exp_date
  .field
    = form.label :quantity
    = form.number_field :quantity
  .field
    = form.label :nutrition_per_unit
    = form.number_field :nutrition_per_unit
  .actions
    = form.submit
